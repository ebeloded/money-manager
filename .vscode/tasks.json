{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["tsc", "tslint", "start"]
    },
    {
      "identifier": "start",
      "label": "START",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "identifier": "tsc",
      "label": "TSC",
      "type": "npm",
      "script": "tsc:watch",
      "isBackground": true,
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "identifier": "tslint",
      "label": "TSLINT",
      "type": "npm",
      "script": "tslint:fix:watch",
      "isBackground": true,
      "problemMatcher": [
        // "$tslint5"
      ],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
