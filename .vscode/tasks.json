{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["tsc", "tslint", "start"]
    },
    {
      "identifier": "start",
      "label": "Start Dev Server",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    },
    {
      "identifier": "tsc",
      "label": "Compile Typescript",
      "type": "npm",
      "script": "tsc:watch",
      "isBackground": true,
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      }
    },
    {
      "identifier": "tslint",
      "label": "Run TSLint",
      "type": "npm",
      "script": "tslint:fix:watch",
      "isBackground": true,
      "problemMatcher": ["$tslint5"],
      "group": "build",
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      }
    },
    {
      "identifier": "github",
      "label": "Open GitHub Desktop",
      "type": "process",
      "command": "github",
      "isBackground": false,
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated"
      }
    }
  ]
}
