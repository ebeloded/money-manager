{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start",
      "type": "shell",
      "command": "yarn start",
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "type": "shell",
      "label": "Lint",
      "command": "yarn lint",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "TSC",
      "type": "shell",
      "command": "tsc --watch --noEmit --project tsconfig.json",
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
