{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    // "importHelpers": true,
    // "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    // "skipLibCheck": true,
    // "skipDefaultLibCheck": true,
    "noEmitOnError": false,
    "baseUrl": "src",
    "paths": {
      "~/db/*": ["db/*"],
      "~/types": ["types.ts"],
      "~/utils/*": ["utils/*"],
      "@elements/*": ["components/@elements/*"],
      "~/containers/*": ["containers/*"],
      "~/components/*": ["components/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/**/__test__/**/*"
  ]
}
